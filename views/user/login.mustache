<html>
    <head>
        {{>header}}
    </head>
    <body class="container">

        <nav class="navbar navbar-light bg-white">
            <div style="height: 50px; padding-left: 100px; padding-right: 100px;" class="container-fluid justify-content-between align-content-center">
                <a class="navbar-brand fs-4 fw-bold" href="/">Well<span class="fst-italic fw-normal">being</span></a>
                <ul class="navbar-nav d-flex flex-row">
                    <li class="nav-item"><button class="btn btn-light me-2">Login</button></li>
                    <li class="nav-item"><button class="btn btn-light">Register</button></li>
                </ul>
            </div>
        </nav>

        <div style="height: auto; margin: 100px; padding: 50px; border: 5px solid lightblue; border-radius: 10px;">
            <h2>Log In</h2>
            <div>
                <form method="POST" action="/login">
                    <div class="form-group mb-3">
                        <label for="username" class="col-sm-2 col-formlabel">
                            User Name
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control"  id="username" name="username" placeholder="username">
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="password" class="col-sm-2 col-formlabel">
                            Password
                        </label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control"  id="password" name="password"placeholder="password">
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary w-25 fs-4 fw-bold" style="background-color: lightblue; border: none;" value="Login">
                </form>
            </div>
        </div>
    </body>
</html>